<div class="box has-text-centered columns m-2">
  <div class="column">
    <img src="/images/point_of_interest.png" width="60" alt="img"/>
  </div>
  <div class="column">
    <div class="title is-5"> {{title}} </div>
    <div class="subtitle is-5"> {{subTitle}} </div>
  </div>
  <div class="column">
    <i class="fas fa-city fa-3x" style="color:rgb(95, 96, 173)" title="Source repo" pos="bottom" uk-tooltip></i>
    {{#if user}}
      <div class="is-size-7">{{user.firstName}} {{user.lastName}}</div>
    {{else}}
      <div class="is-size-7">POI-Hapi 0.5.0</div>
    {{/if}}
  </div>
</div>
